{
  "name": "typescript-library-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for TypeScript 2.0 libraries",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxdavidson/typescript-library-boilerplate.git"
  },
  "engines": {
    "npm": ">=3.0.0"
  },
  "main": "dist/commonjs/index.js",
  "module": "dist/es2015/index.js",
  "jsnext:main": "dist/es2015/index.js",
  "browser": "dist/bundle.js",
  "typings": "dist/typings/index.d.ts",
  "scripts": {
    "build": "npm run build:commonjs & npm run build:umd",
    "build:commonjs": "tsc",
    "build:rollup": "rollup --config",
    "build:es2015": "tsc --module es2015 --outDir dist/es2015 --declaration --declarationDir dist/typings",
    "build:umd": "npm run build:es2015 && rollup --config",
    "clean": "rimraf dist coverage",
    "lint": "tslint --project tsconfig.json --format stylish",
    "test": "jest --coverage ",
    "prebuild": "npm run clean",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build"
  },
  "keywords": [
    "typescript",
    "lib",
    "library",
    "boilerplate"
  ],
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "_\\w*.\\w+$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "@types/node": "^6.0.45"
  },
  "devDependencies": {
    "@types/jest": "^16.0.1",
    "jest": "^17.0.3",
    "pascal-case": "^2.0.0",
    "rimraf": "^2.5.3",
    "rollup": "^0.38.0",
    "rollup-plugin-commonjs": "^5.0.3",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.0.9",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.0",
    "rollup-plugin-uglify": "^1.0.1",
    "ts-jest": "^17.0.3",
    "tslint": "^4.0.2",
    "typescript": "^2.0.10"
  }
}
