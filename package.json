{
  "name": "typescript-library-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for TypeScript 2.0 libraries",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxdavidson/typescript-library-boilerplate.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "browser": "bundle.js",
  "typings": "typings.d.ts",
  "scripts": {
    "build": "npm run build:cjs & npm run build:umd",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:es": "tsc --outDir dist/es --module es2015",
    "build:umd": "npm run build:es && rollup --config && dts-bundle --name typings --main dist/es --outputAsModuleFolder",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --type-check --format stylish",
    "test": "jest --config jest.config.json --coverage --no-cache --runInBand",
    "test:watch": "jest --config jest.config.json --watch",
    "prebuild": "npm run clean",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "lib",
    "library",
    "boilerplate"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/node": "^7.0.5"
  },
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "dts-bundle": "^0.7.2",
    "jest": "^18.1.0",
    "pascal-case": "^2.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-uglify": "^1.0.1",
    "ts-jest": "^19.0.0",
    "tslint": "^4.4.2",
    "typescript": "^2.2.0"
  }
}
