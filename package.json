{
  "name": "typescript-library-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for TypeScript 2.0 libraries",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxdavidson/typescript-library-boilerplate.git"
  },
  "main": "dist/bundle.js",
  "module": "es2015/index.js",
  "typings": "es2015/index.d.ts",
  "scripts": {
    "build": "npm run build:tsc && npm run build:rollup",
    "build:tsc": "tsc",
    "build:rollup": "rollup --config",
    "clean": "rimraf dist es2015 coverage .nyc_output",
    "lint": "tslint --project tsconfig.json",
    "test": "nyc ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prebuild:tsc": "npm run clean",
    "pretest": "npm run build:tsc -- --module commonjs",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "postbuild:rollup": "rimraf es2015/**/__tests__",
    "prepublish": "npm run build"
  },
  "keywords": [
    "typescript",
    "lib",
    "library",
    "boilerplate"
  ],
  "files": [
    "dist",
    "es2015"
  ],
  "dependencies": {
    "@types/node": "^6.0.45"
  },
  "devDependencies": {
    "pascal-case": "^2.0.0",
    "rimraf": "^2.5.3",
    "rollup": "^0.36.0",
    "rollup-plugin-commonjs": "^5.0.3",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.0.9",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.0",
    "rollup-plugin-uglify": "^1.0.1",
    "tslint": "^4.0.2",
    "typescript": "^2.0.0"
  }
}
